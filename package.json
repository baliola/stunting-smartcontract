{
  "name": "hardhat-boilerplate",
  "description": "Just Boilerplate",
  "version": "1.0.1",
  "main": ".eslintrc.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "accounts": "hardhat accounts",
    "rename-contract": "hardhat rename-contract",
    "compile": "hardhat compile --force",
    "test": "hardhat test",
    "test-extended": "EXTENDED_TESTS=1 hardhat test",
    "test-gas": "REPORT_GAS=1 hardhat test",
    "local-node": "hardhat node",
    "deploy": "hardhat run scripts/1_deploy.ts",
    "deploy-localhost": "hardhat run scripts/2_deploy_localhost.ts --network localhost",
    "deploy-token": "hardhat run scripts/5_deploy_test_token_native.ts",
    "verify": "hardhat verify --constructor-args config/ContractArguments.ts",
    "set-platform": "hardhat run scripts/3_setPlatform.ts"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@openzeppelin/contracts": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.12",
    "chai": "4.4.1",
    "ethers": "5.7.2",
    "hardhat": "^2.22.4",
    "hardhat-gas-reporter": "^2.1.1",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.11",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@types/chai-as-promised": "^7.1.8",
    "chai-as-promised": "^7.1.2",
    "dotenv": "^16.4.5",
    "yarn-upgrade-all": "^0.7.2"
  }
}
